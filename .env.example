# Database Configuration
DATABASE_NAME=battmon
DATABASE_USER=battmon
DATABASE_PASSWORD=battmon

# UPS Monitor Configuration
# Poll interval in seconds for device checks
UPS_POLL_INTERVAL=5
# Number of consecutive failures before sending connection lost notification
UPS_FAILURE_THRESHOLD=10
# URL of the apcaccess proxy running on the host (required)
UPS_APCACCESS_PROXY_URL=http://localhost:8083

# Firebase Configuration
# Path on the host machine to your Firebase service account JSON file
HOST_FIREBASE_CREDENTIALS_PATH=./backend/firebase-credentials.json
FIREBASE_ENABLED=true

# Email Notification Configuration
# Set to true to enable email notifications
EMAIL_ENABLED=false

# SMTP Configuration
# For Gmail: use smtp.gmail.com with port 587
# For other providers: adjust host and port accordingly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_START_TLS=true

# Gmail Authentication
# For Gmail with 2FA: Create an App Password at https://myaccount.google.com/apppasswords
# IMPORTANT: Never commit this file with real passwords!
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Email Addresses
# From: The email address that sends notifications (usually same as SMTP_USERNAME)
EMAIL_FROM=your-email@gmail.com
# To: The email address that receives notifications
EMAIL_TO=recipient@example.com

# JVM Configuration
JAVA_OPTS=-Xmx512m -Xms256m
